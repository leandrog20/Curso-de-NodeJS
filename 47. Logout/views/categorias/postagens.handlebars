
<h1>{{categoria.nome}}</h1>
{{#each postagens}}
    <div class="card mb-3 mt-4">
        <div class="card-body">
        <h5 class="card-title">{{this.titulo}}</h5>
        <p class="card-text">{{this.descricao}}</p>
        <button class="btn btn-primary" onclick="location.href='/postagem/{{this.slug}}'">Ler mais</button>
        <hr>
        <small class="text-muted float-end">Data de criac√£o: {{this.data}}</small>
        </div>
    </div>
{{else}}
<div class="alert alert-secondary mt-4" role="alert">
        Nenhuma postagem cadastrada!
</div>
{{/each}}